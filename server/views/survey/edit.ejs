<%- include ../partials/header.ejs %>


<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Title"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Option A</label>
                    <input type="text" class="form-control"
                    id="optionATextField"
                    placeholder="Enter the Option A"
                    name="optionA" 
                    value="<%= survey.optionATextField %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Option B</label>
                    <input type="text" class="form-control"
                    id="optionBTextField"
                    placeholder="Enter the Option B"
                    name="optionB" 
                    value="<%= survey.optionBTextField %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Option C</label>
                    <input type="text" class="form-control"
                    id="optionCTextField"
                    placeholder="Enter the Option C"
                    name="optionC" 
                    value="<%= survey.optionCTextField %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Option D</label>
                    <input type="text" class="form-control"
                    id="optionDTextField"
                    placeholder="Enter the Option D"
                    name="optionD" 
                    value="<%= survey.optionDTextField %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the book"
                    name="description" 
                    required>
                    <%= survey.description %>
                    </textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/footer.ejs %>